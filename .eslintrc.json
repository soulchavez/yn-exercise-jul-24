{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "react",
        "import"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "max-len": [
            "error",
            {
                "code": 80
            }
        ],
        "function-paren-newline": "off",
        "complexity": [
            "error",
            7
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/prop-types": "off",
        "quotes": [
            "error",
            "single"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "import/order": [
            "error",
            {
                "newlines-between": "always",
                "groups": [
                    "external",
                    "builtin",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    }
                ],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    }
}